                            li.catalog__filters-list-item.sidebar__list-item
                                p.filter__title.catalog__filter-title.open(data-accordeon="gsm")
                                    |GSM
                                    i.ico
                                        +svg2('arr-down')
                                .filter__fields.catalog__filter-fields(data-fields="gsm")
