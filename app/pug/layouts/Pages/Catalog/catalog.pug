                                    i.ico
                                        +svg2('arr-down')
                                .filter__fields.catalog__filter-fields(data-fields="gps")
                                    div(class=`filter__group`)
                                        input(class=`filter__field` type='radio' name='gps' id="gps-yes")
                                        label(for="gps-yes")
                                            |Так
                                    div(class=`filter__group`)
                                        input(class=`filter__field` type='radio' name='gps' id="gps-no")
                                        label(for="gps-no")
